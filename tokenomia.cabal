    base >=4.9 && <5,
    tasty -any,
    tasty-hunit -any,
    tasty-hedgehog >=0.2.0.0,
    tasty-quickcheck,
    quickcheck-instances,
    QuickCheck,
    random,
    nonempty-containers,
    freer-simple -any,
    bytestring,
    text,
    ordered-containers,
    interpolatedstring-perl6,
    blockfrost-api,
    safe-money,
    data-default


